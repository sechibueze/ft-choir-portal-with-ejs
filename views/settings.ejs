<%- include("partials/header", { title: "Super Admin"}) -%>

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

      <form method="POST" action="/settings/admin">
        <h2>Make admin settings</h2>
        <p>Be sure before you do this!!</p>
        <% if(data.message) {%>
        <%= data.message %>
        <%} %>
        <div class="form-group">
          <label for="email">Upgarade a user to admin</label>
          <input type="email" name="email" class="form-control" required placeholder="Enter email of user" />
        </div>

        <button type="submit" class="btn btn-primary mb-4">Confirm admin</button>
      </form>
      <hr />
      <form method="POST" action="/settings">
        <h2>Adjust settings</h2>
        <p>Be sure before you do this!!</p>
        <% if(data.message) {%>
        <%= data.message %>
        <%} %>
        <div class="form-group">
          <label for="">Select what to reset</label>
          <select class="form-control" name="table" required>
            <option value="testing" selected>Test me</option>
            <option value="user">Reset users</option>
            <option value="notification">Reset notice</option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary mb-4">Reset</button>
      </form>
    </div>
    <div class="col-md-3">

    </div>
  </div>
</div>



<%- include("partials/footer") -%>